@{
    ViewBag.Title = "Prfile";
    Layout = "~/Views/Shared/AccountLayout.cshtml";
    //Layout = null;
}

    <div class="p-3 py-5">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h4 class="text-left" style="font-weight: bold;">Profile</h4>
        </div>
        <div class="row mt-2">
            <div class="col-md-6"><label class="labels" style="font-size:13">Username</label><input type="text" class="form-control" placeholder="lalalalisa_m" value=""></div>
            <div class="col-md-6">
                <label class="labels">Address</label><input type="text" class="form-control" placeholder="3891 Ranchview Dr. Richardson, California 62639" value="">
            </div>

            <div class="col-md-6">
                <label class="labels">Email</label><input type="text" class="form-control" placeholder="lisa0327@gmail.com" value="">
            </div>
            <div class="col-md-6"><label class="labels">Phone</label><input type="text" class="form-control" placeholder="0123456789" value=""></div>
            <form>
                <div class="col-md-3">
                    <label class="labels" style="font-size:13">Gender:</label>
                    <input type="radio" id="male" name="gender" value="male"><label for="male"><p style="font-size:13px; padding-right: 20px; padding-top: 10px">Male</p></label>
                    <input type="radio" id="female" name="gender" value="female"><label for="female"><p style="font-size:13px;padding-top: 10px">Female</p></label></label>
                </div>
            </form>
            @*<div class="col-md-6">
                <label for="dob-day" class="control-label">Date of birth : </label>
               
            </div>*@
        </div>
        <div class="mt-5 text-center" style="padding-top: 10px">
            <button class="btn btn-primary profile-button" type="button"><a href="password.html">Change Password</a></button>
        </div>
    </div>

		