                        @Html.EditorFor(model => model.EmailContactPerson, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.EmailContactPerson, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.FaxNumber, htmlAttributes: new { @class = "control-label col-md-3" })
