@model List<Models.EF.Product>
@{
    var category = (Models.EF.ProductCategory)ViewBag.Category;
    ViewBag.Title = category;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="sub-cate">
        @{Html.RenderAction("ProductCategory", "Product");}
        <!--initiate accordion-->
    </div>
    <div class="shoes-grid" style="padding-top:30px;">
        <div class="products">
            <h1 class="latest-product" style="text-transform:uppercase"><b>@category.Name</b></h1>
            <div class="view-all">
                @if (ViewBag.TotalPage > 1)
                {
                    var pageDisplay = (int)ViewBag.MaxPage;
                    int totalPage = (int)ViewBag.TotalPage;
                    int currentPage = ((int)ViewBag.Page);

                    // Create numeric links
                    var startPageIndex = Math.Max(1, currentPage - pageDisplay / 2);
                    var endPageIndex = Math.Min(totalPage, currentPage + pageDisplay / 2);

                    var link = "/product/" + category.MetaKeyword + "-" + category.ID;
                    <nav>
                        <ul class="pagination">
                            @if (currentPage > ViewBag.First)
                            {
                                <li><a href="@link?page=@ViewBag.First" title="First Page" class="first"><</a></li>
                                <li>
                                    <a href="@link?page=@ViewBag.Prev" title="Previous Page" class="prev">></a>
                                </li>

                            }
                            @for (int i = startPageIndex; i <= endPageIndex; i++)
                            {
                                if (currentPage == i)
                                {

                                    <li> <a href="@link?page=@i" class="active" title="Page @i">@i</a></li>
                                }
                                else
                                {
                                    <li><a href="@link?page=@i" title="Page @i" class="pos">@i</a></li>
                                }
                            }
                            @if (currentPage < totalPage)
                            {
                                <li><a href="@link?page=@ViewBag.Next" class="next" title="Next Page">></a></li>
                                <li> <a href="@link?page=@ViewBag.Last" class="last" title="Last Page">>></a></li>
                            }

                        </ul>
                    </nav>

                }
                else
                {
                    
                }
            </div>
        </div>
        <div class="product-left">
            @foreach (var item in Model)
            {
                var url = "/details/" + item.MetaKeyword + "-" + item.ID;
                <div class="col-md-4 chain-grid grid-top-chain" style="margin: 10px;">
                    <a href="@url"><img class="img-responsive chain" src="@item.Image" style="width: 200px; height: 250px;" alt="@item.ProductName" /></a>
                    <span class="star"> </span>
                    <div class="grid-chain-bottom">
                        <h6><a href="single.html">@item.ProductName</a></h6>
                        <div class="star-price">
                            <div class="dolor-grid">
                                <span class="actual">@item.Price</span>
                                <span class="rating">
                                    <input type="radio" class="rating-input" id="rating-input-1-5" name="rating-input-1">
                                    <label for="rating-input-1-5" class="rating-star1"> </label>
                                    <input type="radio" class="rating-input" id="rating-input-1-4" name="rating-input-1">
                                    <label for="rating-input-1-4" class="rating-star1"> </label>
                                    <input type="radio" class="rating-input" id="rating-input-1-3" name="rating-input-1">
                                    <label for="rating-input-1-3" class="rating-star"> </label>
                                    <input type="radio" class="rating-input" id="rating-input-1-2" name="rating-input-1">
                                    <label for="rating-input-1-2" class="rating-star"> </label>
                                    <input type="radio" class="rating-input" id="rating-input-1-1" name="rating-input-1">
                                    <label for="rating-input-1-1" class="rating-star"> </label>
                                </span>
                            </div>
                            <a class="now-get get-cart" href="/add-to-cart?productId=@item.ID&quantity=1">ADD TO CART</a>
                            <div class="clearfix"> </div>
                        </div>
                    </div>
                </div>

            }

            <div class="clearfix"> </div>
        </div>
        
    </div>

</div>