@model List<WebAppOnlineShop.Models.CartItem>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";

}
@section jsFooter{
    <script src="/Assets/Client/js/jsController/cartController.js"></script>
}


<div class="container" style="margin-top: 50px;">

    <center class="well well-small">
        <h1><center>MY CART</center> <small class="pull-right">  </small></h1>
        <hr class="soften" />
        @if (Model.Count > 0)
        {
            <table class="table table-bordered table-condensed">
                <thead>
                    <tr>
                        <td style="text-align: center;text-transform:uppercase "><b>Product. No</b></td>
                        <td style="text-align: center;text-transform:uppercase "><b>Product Name</b></td>
                        <td style="text-align: center;text-transform:uppercase "><b>Image</b></td>
                        <td style="text-align: center;text-transform:uppercase "><b>Quantity</b></td>
                        <td style="text-align: center;text-transform:uppercase "><b>Unit Price</b></td>
                        <td style="text-align: center;text-transform:uppercase "><b>Total</b></td>
                        <td style="text-align: center; text-transform:uppercase"><b>You want to ...?</b></td>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td style="text-align: center; ">@item.Product.ID</td>
                            <td style="text-align: center; ">@item.Product.ProductName</td>
                            <td style="text-align: center; "><img src="@item.Product.Image" width="150" height="150" /></td>
                            <td style="text-align: center; "><input type="text" class="txtQuantity" data-id="@item.Product.ID" value="@item.Quantity" /></td>
                            <td style="text-align: center; ">@item.Product.Price.GetValueOrDefault(0).ToString("N0")</td>
                            <td style="text-align: center; ">@((item.Product.Price.GetValueOrDefault(0) * item.Quantity).ToString("N0"))</td>
                            <td style="text-align: center; "><a href="#" data-id="@item.Product.ID" class="btn-delete">DEL</a></td>
                        </tr>
                    }

                </tbody>
            </table>

            <center style="padding-top: 45px;">
                <button id="btnContinue" class="btn btn-lg" style="background-color:#8B5C7E; color:#ffffff; width: auto; height: 40px; font-size: 15px;">Continue to Shopping</button>

                <button id="btnUpdate" class="btn check_out btn" style="background-color:#8B5C7E; color:#ffffff;width: auto; height: 40px; font-size: 15px;">Update Cart</button>
                <button id="btnDeleteAll" class="btn check_out btn" style="background-color:#8B5C7E; color:#ffffff; width: auto; height: 40px; font-size: 15px;">Delete All</button>
                <button id="btnPayment" class="btn check_out btn" style="background-color:#8B5C7E; color:#ffffff; width: auto; height: 40px; font-size: 15px;">Check Out!</button>

            </center>

        }
        else
        {
            <span class="alert alert-danger">Your cart is null! Please get back and enjoy to shopping !</span>
            <br />
            <button id="btnContinue" class="btn btn-lg" style="background-color:#8B5C7E; color:#ffffff; width: auto; height: 40px; font-size: 15px; margin-top:25px;">Go to Shopping</button>

        }



</div>
