@model List<WebAppOnlineShop.Models.CartItem>
@{
    ViewBag.Title = "Payment";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container" style="margin-top: 50px;">
    <div class="well well-small">
        <h3 class="cate" style="text-align: center; margin-bottom: 25px;">CHECK OUT MY CART !</h3>
        @if (Model.Count > 0)
        {
            <table class="table table-bordered table-condensed">
                <thead>
                    <tr>
                        <td style="text-align: center;text-transform:uppercase "><b>Product. No</b></td>
                        <td style="text-align: center;text-transform:uppercase "><b>Product Name</b></td>
                        <td style="text-align: center;text-transform:uppercase "><b>Image</b></td>
                        <td style="text-align: center;text-transform:uppercase "><b>Quantity</b></td>
                        <td style="text-align: center;text-transform:uppercase "><b>Unit Price</b></td>
                        <td style="text-align: center;text-transform:uppercase "><b>Total</b></td>
                        <td style="text-align: center; text-transform:uppercase"><b>You want to ...?</b></td>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td style="text-align: center; ">@item.Product.ID</td>
                            <td style="text-align: center; ">@item.Product.ProductName</td>
                            <td style="text-align: center; "><img src="@item.Product.Image" width="150" height="150" /></td>
                            <td style="text-align: center; "><input type="text" class="txtQuantity" data-id="@item.Product.ID" value="@item.Quantity" /></td>
                            <td style="text-align: center; ">@item.Product.Price.GetValueOrDefault(0).ToString("N0")</td>
                            <td style="text-align: center; ">@((item.Product.Price.GetValueOrDefault(0) * item.Quantity).ToString("N0"))</td>
                            <td style="text-align: center; "><a href="#" data-id="@item.Product.ID" class="btn-delete">DEL</a></td>
                        </tr>
                    }

                </tbody>
            </table>
        }

        
        @using (Html.BeginForm("Payment", "Cart", FormMethod.Post))
         {
            <div class="checkout-left">
                <div class="address_form_agile mt-sm-5 mt-4">
                    <h3 class="cate" style="text-align: center; margin-bottom: 25px; font-size: 15px; background-color: #FA9FA4;">GIVE US SOME MORE DETAILS FOR YOUR ORDER</h3>
                    <form action="#" method="post" class="creditly-card-form agileinfo_form">
                        <div class="creditly-wrapper wthree, w3_agileits_wrapper">
                            <div class="information-wrapper">
                                <div class="first-row">
                                    <div class="w3_agileits_card_number_grids">
                                        <div class="w3_agileits_card_number_grid_right form-group">
                                            <div class="controls">
                                                <input type="text" class="form-control" placeholder="Address" name="address" required="">
                                            </div>
                                        </div>
                                    </div>

                                </div>
                                <center>
                                    <button type="submit" class="submit check_out btn" style="background-color:#FA9FA4; color:#ffffff; width: auto; height: 40px; font-size: 15px;">
                                        Check Out!

                                    </button>
                                </center>

                            </div>
                        </div>
                    </form>
                </div>
   		</div>
         }
    </div>

    
</div>

